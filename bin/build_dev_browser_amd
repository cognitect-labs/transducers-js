#!/bin/sh

set -e

cd `dirname $0`/..

mkdir -p target

prefix=`cat VERSION_PREFIX`
suffix=`build/revision`
version=$prefix.$suffix
prelude=`bin/prelude`
preludenl=$prelude.$'\n'

java -jar deps/closure-compiler/compiler.jar -O SIMPLE --formatting PRETTY_PRINT \
--generate_exports --output_wrapper "$preludenl;(function(){%output%})();" \
-D TRANSDUCERS_BROWSER_AMD_TARGET=true --manage_closure_dependencies \
--only_closure_dependencies --closure_entry_point=com.cognitect.transducers.amd \
--js_output_file=target/transducers-$version-amd.js \
'deps/closure-library/closure/**.js' 'src/**.js'
